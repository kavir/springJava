<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="6-create-transactions-table" author="kabir">
        <createTable tableName="transactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sender_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_transaction_sender" referencedTableName="authenticusers" referencedColumnNames="id"/>
            </column>
            <column name="receiver_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_transaction_receiver" referencedTableName="authenticusers" referencedColumnNames="id"/>
            </column>
            <column name="amount" type="DOUBLE"/>
            <column name="timestamp" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="statement" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
