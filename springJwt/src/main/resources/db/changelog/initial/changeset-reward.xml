<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="3-create-reward-table" author="kabir">
        <createTable tableName="reward">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="reward_points" type="DOUBLE">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_reward_user" referencedTableName="authenticusers" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4-convert-reward-to-onetoone" author="kavir">

        <!-- Make user_id unique to enforce One-To-One -->
        <addUniqueConstraint
                tableName="reward"
                columnNames="user_id"
                constraintName="uk_reward_user_id" />

    </changeSet>

</databaseChangeLog>
