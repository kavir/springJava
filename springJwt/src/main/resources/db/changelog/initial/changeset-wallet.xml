<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="7-create-wallets-table" author="kabir">
        <createTable tableName="wallets">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="balance" type="DOUBLE" defaultValueNumeric="0.0"/>
            <column name="mpin" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_wallet_user" referencedTableName="authenticusers" referencedColumnNames="id"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="wallets"
                columnNames="user_id"
                constraintName="uk_wallets_user_id"/>
    </changeSet>


</databaseChangeLog>
